<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.evercam.connect"
    android:versionCode="9"
    android:versionName="1.0.8" >

    <!-- 10/12/2013  version1 - 1.0.0 -->
    <!-- 10/01/2014  version2 - 1.0.1 -->
    <!-- 29/01/2014  version4 - 1.0.3 -->
    <!-- 31/01/2014  version5 - 1.0.4 -->
    <!-- 07/02/2014  version6 - 1.0.5 -->
    <!-- 18/02/2014  version7 - 1.0.6 -->
    <!-- 04/03/2014  version8 - 1.0.7 -->
    <!-- 10/03/2014  version9 - 1.0.8 -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_192x192"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.evercam.connect.DiscoverMainActivity"
            android:icon="@drawable/icon_192x192"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.evercam.connect.CameraDetails"
            android:icon="@drawable/icon_192x192"
            android:label="@string/title_activity_camera_details" >
        </activity>
        <activity
            android:name="io.evercam.connect.RouterActivity"
            android:icon="@drawable/icon_192x192"
            android:label="@string/title_activity_router"
            android:parentActivityName="io.evercam.connect.SettingsActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.evercamconnect.discover.SettingsActivity" />
        </activity>
        <activity
            android:name="io.evercam.connect.CameraDetailActivity"
            android:icon="@drawable/icon_192x192"
            android:label="@string/title_activity_camera_detail"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="io.evercam.connect.discover.upnp.BrowserUpnpService" />

        <activity
            android:name="io.evercam.connect.MainTabActivity"
            android:label="@string/portForwarding"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="io.evercam.connect.signin.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="io.evercam.connect.SettingsActivity"
            android:icon="@drawable/icon_192x192"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="io.evercam.connect.AddToEvercamActivity"
            android:label="@string/title_activity_add_to_evercam" >
        </activity>
        <activity
            android:name="io.evercam.connect.signin.SignUpActivity"
            android:label="@string/create_account" >
        </activity>
    </application>

</manifest>