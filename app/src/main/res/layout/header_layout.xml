<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/sample_title1"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:text="@string/demoCamera"
        android:textColor="#778899"
        android:textSize="15sp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#778899"/>

    <LinearLayout
        android:id="@+id/sample_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera_img1"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:src="@drawable/ds_2cd7164_e"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/camera_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="@string/sampleHikvisionModel"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/camera_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:text="@string/sampleCamera"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/scan_sublayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ssid_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dip"
            android:textColor="#778899"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/scan_subsublayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scanning_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="@string/scanning"
                android:textColor="#778899"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <ProgressBar
                android:id="@+id/processBar1"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#778899"/>

    <Button
        android:id="@+id/button_turnOnWifi"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_selector"
        android:text="Connect to Wi-Fi"
        android:textColor="#ffffff"
        android:visibility="gone">
    </Button>

</LinearLayout>