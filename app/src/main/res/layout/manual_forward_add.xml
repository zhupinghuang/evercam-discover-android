<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/portType_txt"
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:text="@string/portType:"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/portType_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/internalPort_txt"
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:text="@string/internalPort:"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/internalPort_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/unknown"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#778899"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/externalPort_txt"
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:text="@string/externalPort:"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/externalPort_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/unknown"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#778899"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>